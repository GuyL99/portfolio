<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayResult"
    android:orientation="vertical"
    tools:context="com.GuyL.strartup.MainActivity">

    <EditText
        android:id="@+id/editResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grayResult"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="44pt"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/btnAC"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/grayRegBtn"
                android:onClick="btnClean"
                android:text="AC"
                android:textColor="w" />

            <Button
                android:id="@+id/btnPlusMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/grayRegBtn"
                android:onClick="btnNumber"
                android:text="+/-"
                android:layout_marginRight="1pt"/>

            <Button
                android:id="@+id/btnPrecent"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/grayRegBtn"
                android:onClick="btnPrecent"
                android:text="%" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/orangeNonRegBtn"
                android:onClick="btnOperation"
                android:text="/"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/btn7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/grayRegBtn"
                android:onClick="btnNumber"
                android:text="7"
                android:layout_marginRight="1pt" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/grayRegBtn"
                android:onClick="btnNumber"
                android:text="8"
                android:layout_marginRight="1pt" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/grayRegBtn"
                android:onClick="btnNumber"
                android:text="9"
                android:layout_marginRight="1pt"/>

            <Button
                android:id="@+id/btnMul"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/orangeNonRegBtn"
                android:onClick="btnOperation"
                android:text="*"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/btn4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/grayRegBtn"
                android:onClick="btnNumber"
                android:text="4"
                android:layout_marginRight="1pt"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/grayRegBtn"
                android:onClick="btnNumber"
                android:text="5"
                android:layout_marginRight="1pt"/>

            <Button
                android:id="@+id/btn6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/grayRegBtn"
                android:onClick="btnNumber"
                android:text="6"
                android:layout_marginRight="1pt"/>

            <Button
                android:id="@+id/btnSub"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/orangeNonRegBtn"
                android:onClick="btnOperation"
                android:text="-"
                android:textColor="@color/white" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/btn1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/grayRegBtn"
                android:onClick="btnNumber"
                android:text="1"
                android:layout_marginRight="1pt"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/grayRegBtn"
                android:onClick="btnNumber"
                android:text="2"
                android:layout_marginRight="1pt"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/grayRegBtn"
                android:onClick="btnNumber"
                android:text="3"
                android:layout_marginRight="1pt"/>

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/orangeNonRegBtn"
                android:onClick="btnOperation"
                android:text="+"
                android:textColor="@color/white" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn0"
            android:layout_width="60pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/grayRegBtn"
            android:onClick="btnNumber"
            android:text="0"
            android:layout_marginRight="1pt"/>

        <Button
            android:id="@+id/btnDot"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="0"
            android:background="@color/grayRegBtn"
            android:onClick="btnNumber"
            android:text="."
            android:layout_marginRight="1pt"/>

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="0"
            android:background="@color/orangeNonRegBtn"
            android:onClick="btnEqual"
            android:text="="
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
